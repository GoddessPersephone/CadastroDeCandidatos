@model List<UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuarios";
}




<div class="text-center">
    <h1 class="display-4">Lista de Usuário</h1>

    <br />

    <div class="text-center">
        <div class="d-grid gap-2 d-md-flex justfy-content-md-start">
            <a class="btn btn-success"role="button" asp-controller="Candidato" asp-action="Criar">Adicionar um novo Usuário</a>
        </div>
</div>

    @if(TempData["MensagemSucesso"] != null)
    {
       <div class="alert alert-info" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
      <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }


<br />


    <table id="table-usuario" class="display" style="width:100%">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Login</th>
      <th scope="col">Email</th>
      <th scope="col">Data de Cadastro</th>
      

    </tr>
  </thead>
  <tbody>
        @if(Model != null && Model.Any())
        {
            foreach (UsuarioModel usuario in Model)
            {
                <tr>
                    <th scope="row">@usuario.Id</th>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.DataCadastro</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-warning" asp-route-id="@usuario.Id" asp-controller="Candidato" 
                            asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-secondary" asp-route-id="@usuario.Id" asp-controller="Candidato"
                            asp-action="ApagarConfirmacao">Apagar</a>
                        </div>
                    </td> 
                </tr> 
            }  
        }else
        {
            <tr class="odd"><td valign="top" colspan="5">Nenhum Usuario Encontrado</td></tr>    
        }
</tbody>
</table> 
</div>
